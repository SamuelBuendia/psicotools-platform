{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h1>Edit User</h1>
        </div>
        <div class="card-body">
            <form action="/users/edit-user/{{user._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group mb-3">
                    <input type="number" name="identification_number" class="form-control" placeholder="identification_number" value="{{user.identification_number}}">
                </div>
                <div class="form-group mb-3">
                    <input type="text" name="name" class="form-control" placeholder="name" value="{{user.name}}">
                </div>
                <div class="form-group mb-3">
                    <input type="text" name="lastname" class="form-control" placeholder="lastname" value="{{user.lastname}}">
                </div>
                <div class="form-group mb-3 d-grid">
                    <button class="btn btn-primary" type="submit">
                        Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>